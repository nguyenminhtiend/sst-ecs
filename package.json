{
  "name": "sst-ecs-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo with Express microservices deployed to AWS ECS using SST",
  "scripts": {
    "dev:service1": "pnpm --filter service1 dev",
    "build": "pnpm -r build",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "type-check": "pnpm -r type-check",
    "deploy": "sst deploy",
    "dev": "sst dev",
    "clean": "pnpm -r clean && rm -rf node_modules .sst",
    "cleanup:stage": "./cleanup-stage.sh"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "sst": "^3.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  }
}

